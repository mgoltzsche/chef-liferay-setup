#!/bin/bash
function ldapBackup {
	EXIT_CODE=0
	for INSTANCE in $(ls /etc/dirsrv/ | grep -P "^slapd-"); do
		backupDirectory "/etc/dirsrv/$INSTANCE" "$INSTANCE" dirsrv:dirsrv
		STATUS=$?

		if [ $STATUS != '0' ]; then
			EXIT_CODE=1
		fi
	done
	return $EXIT_CODE
}

case "$ACTION" in
	dump)
		ldapBackup
	;;
	restore)
		serviceWrapper dirsrv stop
		ldapBackup &&
		serviceWrapper dirsrv start
	;;
	*)
		echo "Usage: $0 {dump|restore} DIRECTORY"
		exit 1
	;;
esac
