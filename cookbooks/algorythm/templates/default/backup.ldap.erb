#!/bin/bash
ACTION="$1"
BAK="$2"

if [ -z "$BAK" ]; then
	echo "Usage: $0 {dump|restore} DIRECTORY"
	exit 1
fi

function ldapBackup {
	EXIT_CODE=0
	for INSTANCE in $(ls /etc/dirsrv/ | grep -P "^slapd-"); do
		backupDirectory $ACTION "/etc/dirsrv/$INSTANCE" "$BAK/$INSTANCE" dirsrv:dirsrv 770
		STATUS=$?

		if [ $STATUS != '0' ]; then
			EXIT_CODE=1
		fi
	done
	return $EXIT_CODE
}

case "$ACTION" in
	dump)
		ldapBackup
	;;
	restore)
		serviceWrapper dirsrv stop
		ldapBackup &&
		serviceWrapper dirsrv start
	;;
	*)
		echo "Usage: $0 {dump|restore} DIRECTORY"
		exit 1
	;;
esac
