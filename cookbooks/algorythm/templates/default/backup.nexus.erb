#!/bin/bash
if [ -z "$NEXUS_HOME" ]; then
	NEXUS_HOME='<%=@home%>'
fi
if [ -z "$NEXUS_SYSTEM_USER" ]; then
	NEXUS_SYSTEM_USER='<%=@user%>'
fi

function nexusBackup {
	backupDirectory "$NEXUS_HOME" '' "$NEXUS_SYSTEM_USER:$NEXUS_SYSTEM_USER"
}

case "$ACTION" in
	dump)
		nexusBackup &&
		rm -rf "$BACKUP_TMP_DIR/logs" &&
		rm -rf "$BACKUP_TMP_DIR/indexer" &&
		rm -rf "$BACKUP_TMP_DIR/timeline" &&
		rm -rf "$BACKUP_TMP_DIR/storage/codehaus-snapshots" &&
		rm -rf "$BACKUP_TMP_DIR/storage/apache-snapshots" &&
		rm -rf "$BACKUP_TMP_DIR/storage/central"
	;;
	restore)
		serviceWrapper liferay stop
		nexusBackup &&
		serviceWrapper liferay start
	;;
	*)
		echo "Usage: $0 {dump|restore} DIRECTORY"
		exit 1
	;;
esac
