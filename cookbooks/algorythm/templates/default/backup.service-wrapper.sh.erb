#!/bin/bash

SERVICE=$1
ACTION=$2

if [ -z "$SERVICE" ]; then
	echo "Usage: $0 {stop|start|restart} SERVICE" 2>&1
	exit 1
fi

case "$ACTION" in
	stop)
		echo "* stop $SERVICE"
		service $SERVICE stop &>> /dev/null
	;;
	start|restart)
		SERVICES_RESTART_LATER="$SERVICES_RESTART_LATER#$SERVICE"
	;;
	*)
		echo "Usage: $0 {stop|start|restart} SERVICE" 2>&1
		exit 1
	;;
esac
