# HTTP proxy
server {
	listen 80;
	server_name <%=@hostname%>;
	root /usr/share/nginx/www;
	
	access_log  /var/log/nginx/nexus-proxy-access;
	error_log   /var/log/nginx/nexus-proxy-error;
	
	rewrite ^ http://<%=@liferay_hostname%>$request_uri? permanent;
}

