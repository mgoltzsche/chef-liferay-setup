shard.available.names=<%=@shards.keys.join(',')%>
shard.default.name=<%=@defaultshard%>

<%@shards.each do |name, shard|%>
jdbc.<%=name%>.driverClassName=org.postgresql.Driver
jdbc.<%=name%>.url=jdbc:postgresql://localhost:<%=shard['pg']['port']%>/<%=shard['pg']['database']%>
jdbc.<%=name%>.username=<%=shard['pg']['user']%>
jdbc.<%=name%>.password=<%=shard['pg']['password']%>
<%end%>

