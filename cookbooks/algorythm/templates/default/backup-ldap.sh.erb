#!/bin/bash
###################################################
# Usage: backup-ldap.sh {dump|restore} DIRECTORY  #
# Must be run as root                             #
###################################################

ACTION="$1"
BAK="$2"

if [ -z "$BAK" ]; then
	echo "Usage: $0 {dump|restore} DIRECTORY"
	exit 1
fi

EXIT_CODE=0

case "$ACTION" in
	dump)
		for INSTANCE in $(ls /etc/dirsrv/ | grep -P "^slapd-"); do
			backupDirectory dump "/etc/dirsrv/$INSTANCE" "$BAK/$INSTANCE"
			STATUS=$?

			if [ $STATUS != '0' ]; then
				EXIT_CODE=1
			fi
		done
	;;
	restore)
		serviceWrapper dirsrv stop

		for INSTANCE in $(ls /etc/dirsrv/ | grep -P "^slapd-"); do
			backupDirectory restore "/etc/dirsrv/$INSTANCE" "$BAK/$INSTANCE" dirsrv 770
			STATUS=$?

			if [ $STATUS != '0' ]; then
				EXIT_CODE=1
			fi
		done

		serviceWrapper dirsrv start
	;;
	*)
		echo "Usage: $0 {dump|restore} DIRECTORY"
		exit 1
	;;
esac

exit $EXIT_CODE
